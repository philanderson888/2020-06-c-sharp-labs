@model IEnumerable<lab_47_mvc.Models.College>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollegeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollegeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CollegeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CollegeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CollegeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
